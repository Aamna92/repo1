def count_vowels_consonants(input_string):
	# Initialize counters for vowels and consonants
	vowel_count = 0
	consonant_count = 0

	# Define a string containing all vowels in both uppercase and lowercase
	vowels = "AEIOUaeiou"

	# Iterate through each character in the input string
	for char in input_string:
		# Check if the character is an alphabet letter
		if char.isalpha():
			# Check if the character is a vowel
			if char in vowels:
				vowel_count += 1
			else:
				consonant_count += 1

	# Print the counts of vowels and consonants
	print("Vowels:", vowel_count)
	print("Consonants:", consonant_count)


# Example usage:
input_string = "Hello, World!"
count_vowels_consonants(input_string)


def reverse_string(input_string):
    # Use slicing with a step of -1 to reverse the string
    reversed_str = input_string[::-1]
    return reversed_str

# Example usage:
input_string = "Hello, World!"
reversed_result = reverse_string(input_string)
print("Reversed string:", reversed_result)


def remove_spaces(input_string):
    # Use the replace method to replace all spaces with an empty string
    no_spaces_str = input_string.replace(" ", "")
    return no_spaces_str

# Example usage:
